<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1FAEE"
    android:orientation="vertical"
    android:weightSum="20"
    android:fadeScrollbars="true"
    tools:context="hu.ait.android.mobilefinalproject.AccountActivity">

    <!--<ScrollView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent">-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_background_account_top"
            android:orientation="vertical">

            <!--android:layout_height="100dp"-->
            <ImageView
                android:id="@+id/accountIcon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:clickable="true"
                android:layout_weight="3"
                android:src="@drawable/ic_menu_slideshow" />

            <!--android:layout_height="wrap_content"-->
            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:text="@string/username"
                android:textSize="30sp" />
        </LinearLayout>


        <!--android:layout_marginTop="30dp"-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--android:layout_height="wrap_content"-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvUserMoneyOwed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/owed"
                    android:textSize="23sp" />


                <TextView
                    android:id="@+id/tvUserMoneyOwedAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$100"
                    android:textSize="23sp" />

            </LinearLayout>

            <!--android:layout_height="wrap_content"-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvUserMoneyDebt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/debt"
                    android:textSize="23sp" />


                <TextView
                    android:id="@+id/tvUserMoneyDebtAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$25"
                    android:textSize="23sp" />

            </LinearLayout>


            <!--android:layout_height="wrap_content"-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2" />

            <!--android:layout_height="wrap_content"-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvUserLocationPrompt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/location"
                    android:textSize="23sp" />

                <TextView
                    android:id="@+id/tvUserLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Budapest"
                    android:textSize="23sp" />

            </LinearLayout>

            <!--android:layout_height="wrap_content"-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2" />

            <!--android:layout_height="35dp"-->
            <TextView
                android:id="@+id/tvUserFriendsAmount"
                android:layout_width="300dp"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/rectangle_background_account_items"
                android:clickable="true"
                android:gravity="center"
                android:text="5 friends"
                android:textSize="20sp" />
            <!--android:layout_marginTop="15dp"-->

            <!--android:layout_height="wrap_content"-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2" />

            <!--android:layout_height="35dp"-->
            <TextView
                android:id="@+id/tvEditPassword"
                android:layout_width="300dp"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/rectangle_background_account_items"
                android:clickable="true"
                android:gravity="center"
                android:text="change password"
                android:textSize="20sp" />

            <!--android:layout_height="35dp"-->
            <TextView
                android:id="@+id/tvEditIcon"
                android:layout_width="300dp"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:background="@drawable/rectangle_background_account_items"
                android:clickable="true"
                android:gravity="center"
                android:text="change icon"
                android:textSize="20sp" />


            <!--android:layout_height="wrap_content"-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2" />

            <!--android:layout_height="35dp"-->
            <TextView
                android:id="@+id/tvLogout"
                android:layout_width="300dp"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/rectangle_background_account_items"
                android:clickable="true"
                android:gravity="center"
                android:text="Logout"
                android:textSize="20sp"
                android:layout_marginBottom="8dp"/>

            <!--android:layout_marginTop="20dp"-->

        </LinearLayout>

    </LinearLayout>
    <!--</ScrollView>-->


</LinearLayout>
