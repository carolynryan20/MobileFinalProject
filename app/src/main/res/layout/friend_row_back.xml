<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="16dp"
    android:padding="5dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightGreen">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayoutOwe"
            android:gravity="center"
            android:padding="10dp">


            <TextView
                android:id="@+id/tvYoureOwed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You're Owed:"
                android:textColor="@color/mediumBlue"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvYoureOwed$"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" FT"
                android:layout_toRightOf="@+id/tvFriendOwed"
                android:layout_below="@+id/tvYoureOwed"
                android:textColor="@color/mediumBlue"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvFriendOwed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_below="@+id/tvYoureOwed"
                android:textColor="@color/mediumBlue"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayoutOwe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/tvYouOwe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="You Owe:"
                android:textColor="@color/orange"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvYouOwe$"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvYouOwe"
                android:text=" Ft"
                android:layout_toRightOf="@+id/tvFriendDebt"
                android:textColor="@color/orange"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tvFriendDebt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvYouOwe"
                android:text="0"
                android:textColor="@color/orange"
                android:textSize="18sp" />

        </RelativeLayout>


    </RelativeLayout>


</android.support.v7.widget.CardView>

